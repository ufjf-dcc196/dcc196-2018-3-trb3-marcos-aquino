<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Cadastro"
    tools:showIn="@layout/activity_cadastro">

    <TextView
        android:id="@+id/txtEspecie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/lbl_especie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtEspecie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtEspecie"
        app:layout_constraintStart_toStartOf="@+id/txtEspecie"
        app:layout_constraintTop_toBottomOf="@+id/txtEspecie" />

    <TextView
        android:id="@+id/txtRaca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_raca"
        app:layout_constraintEnd_toEndOf="@+id/edtEspecie"
        app:layout_constraintStart_toStartOf="@+id/edtEspecie"
        app:layout_constraintTop_toBottomOf="@+id/edtEspecie" />

    <EditText
        android:id="@+id/edtRaca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtRaca"
        app:layout_constraintStart_toStartOf="@+id/txtRaca"
        app:layout_constraintTop_toBottomOf="@+id/txtRaca" />

    <TextView
        android:id="@+id/txtIdade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_idade"
        app:layout_constraintEnd_toEndOf="@+id/edtRaca"
        app:layout_constraintStart_toStartOf="@+id/edtRaca"
        app:layout_constraintTop_toBottomOf="@+id/edtRaca" />

    <EditText
        android:id="@+id/edtIdade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtRaca"
        app:layout_constraintStart_toStartOf="@+id/edtRaca"
        app:layout_constraintTop_toBottomOf="@+id/txtIdade" />

    <TextView
        android:id="@+id/txtLocal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_local"
        app:layout_constraintEnd_toEndOf="@+id/txtIdade"
        app:layout_constraintStart_toStartOf="@+id/txtIdade"
        app:layout_constraintTop_toBottomOf="@+id/edtIdade" />

    <EditText
        android:id="@+id/edtLocal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtIdade"
        app:layout_constraintStart_toStartOf="@+id/edtIdade"
        app:layout_constraintTop_toBottomOf="@+id/txtLocal" />

    <TextView
        android:id="@+id/txtContato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/lbl_contato"
        app:layout_constraintEnd_toEndOf="@+id/txtLocal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtLocal"
        app:layout_constraintTop_toBottomOf="@+id/edtLocal" />

    <EditText
        android:id="@+id/edtContato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edtLocal"
        app:layout_constraintStart_toStartOf="@+id/edtLocal"
        app:layout_constraintTop_toBottomOf="@+id/txtContato" />

</android.support.constraint.ConstraintLayout>